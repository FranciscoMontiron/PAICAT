APP_NAME=PAICAT
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE="America/Argentina/Buenos_Aires"
APP_URL=http://localhost

APP_LOCALE=es
APP_FALLBACK_LOCALE=es
APP_FAKER_LOCALE=es_AR

APP_MAINTENANCE_DRIVER=file

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Base de datos principal PAICAT (Lectura/Escritura)
DB_CONNECTION=paicat
DB_HOST=mariadb
DB_PORT=3306
DB_DATABASE=paicat
DB_DATABASE_PAICAT=paicat
DB_USERNAME=laravel
DB_PASSWORD=secret

# Base de datos Alumnos UTN - Sistema anterior (Solo Lectura)
DB_HOST_ALUMNOS=mariadb
DB_PORT_ALUMNOS=3306
DB_DATABASE_ALUMNOS=alumnos_utn
DB_USERNAME_ALUMNOS=laravel
DB_PASSWORD_ALUMNOS=secret

# Base de datos Sysacad - Datos maestros (Solo Lectura)
DB_HOST_SYSACAD=mariadb
DB_PORT_SYSACAD=3306
DB_DATABASE_SYSACAD=sysacad
DB_USERNAME_SYSACAD=laravel
DB_PASSWORD_SYSACAD=secret

SESSION_DRIVER=redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=redis

CACHE_STORE=redis
CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
